{
  "manifest_version": 3,
  "name": "Retool Embedder",
  "description": "An extension to embed Retool apps in the sidebar",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.retool.com/*"
  ],
  "icons": {
    "128": "retool_logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "logo_32.png",
        "logo_64.png",
        "logo_128.png",
        "logo_256.png",
        "retool_logo.png"
      ],
      "matches": []
    }
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_title": "Click to open Retool Embedder",
    "default_icon": "retool_logo.png"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "commands": {
    "Open-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Open Retool App Embedder"
    }
  }
}