{
  "manifest_version": 3,
  "name": "Retool Embedder",
  "description": "An extension to embed Retool apps in the sidebar",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.retool.com/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_title": "Click to open Retool Embedder",
    "default_icon": "icon-34.png"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.retool.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-34.png",
        "icon-128.png"
      ],
      "matches": []
    }
  ]
}